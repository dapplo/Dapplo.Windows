<Window x:Class="Dapplo.Windows.Example.InstallerExample.InstallerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dapplo.Windows.Example.InstallerExample"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid>
        <!-- First column auto-sized to content -->
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <!-- Second column takes all remaining space -->
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>

        <TextBlock Name="LogText" Text="Log"
                   Grid.Column="0"
                   VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
                   TextWrapping="Wrap"/>
        <Button Name="Start" Content="Install" Grid.Row="1" Margin="5" Click="Button_Click"/>
    </Grid>
</Window>
